
{% extends 'baseAdmin.html.twig' %}

{% block title %}liste des utlilisateur{% endblock %}

{% block body %}



<!-- /.row -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Liste des services</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0" style="height: 300px;">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                    <tr>
                        <th>ID</th>
                      {#  <th>CategoryID</th>#}
                        <th>Service</th>
                        <th>PrixTtc Heure</th>
                        <th>Descripton</th>
                        <th>Pays</th>
                        <th>Ville</th>
                        <th>Region</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {%  for service in service %}
                    <tr>
                        <td>{{ service.id }}</td>
                     {#  <td>{{ service.categorys }}#}

                           {#
                           {% for cat in service.categorys %}
                               {{ cat }}


                           {% endfor %}#}

                       </td>
                        <td>{{ service.titre }}</td>
                        <td>{{ service.prixTtc }} EUR</td>
                        <td>{{ service.description }}</td>
                        <td>{{ service.pays}}</td>
                        <td>{{ service.ville}}</td>
                        <td>{{ service.region}}</td>
                        <td ><span class="tag tag-success"><a href=""><i class="far fa-edit"></i></a> </span></td>
                        <td> <button class="btn btn-danger"  data-toggle="modal" data-target="#exampleModal"><i class="far fa-trash-alt"></i></button> </td>

                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="navigation" style="margin-left: 300px;margin-top: 20px;">



                    <div class="pagination">


                        {{ knp_pagination_render( service ) }}



                    </div>
                </div>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel" style="color: #9e1a1a"><i class="fas fa-exclamation-triangle"> Attention !!</i></h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Vous êtes entrain d'éffacer un service, cette action est définitive!  Etes  vous sure de vouloire éffacer définitivement ce service?
                        </div>
                        <div class="modal-footer">
                            {# <a href="{{ path("reservation.reserver" , {'id': service.id}) }}"><button  class="btn btn-secondary" #}{#data-dismiss="modal"#}{#>Reserver</button></a>#}
                            <a href="{#{{ path("panier.affiche",{'id': service.id }) }}#}"><button  class="btn btn-primary">éfacer</button></a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
<!-- /.row -->
</div><!-- /.container-fluid -->
</section>
<!-- /.content -->
</div>
{% endblock %}