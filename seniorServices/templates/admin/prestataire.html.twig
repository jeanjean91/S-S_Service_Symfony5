{% extends 'baseAdmin.html.twig' %}

{% block title %}liste des utlilisateur{% endblock %}

{% block body %}



    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Liste des prestatatiares</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Pseudo</th>

                                <th>Non</th>
                                <th>Adresse</th>
                                <th>Telephone</th>

                                <th>Roles</th>

                                <th>Edité Roles</th>
                                <th>Voir Preatataire</th>
                            </tr>
                            </thead>
                            <tbody>
                            {%  for prestataire in prestataire %}
                                <tr>
                                    <td>{{ prestataire.id }}</td>
                                    <td>{{ prestataire.User }}</td>

                                    <td>{{ prestataire.nom }} </td>
                                    <td>{{ prestataire.adresse }}</td>
                                    <td>{{ prestataire.tel }}</td>
                                    <td>
                                        {% for role in prestataire.roles %}
                                            {{ role }}


                                        {% endfor %}

                                    </td>
                                    <td> <a href="{#{{path("admin.roles",{'id':prestataire.id})}}#}" ><i class="far fa-edit"></i></a></td>
                                    <td> <a href="{#{{path("admin.roles",{'id':user.id})}}#}" ><i class="fas fa-eye"></i></a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Pseudo</th>

                                <th>Non</th>
                                <th>Prenom</th>
                                <th>Civilite</th>
                                <th>Roles</th>

                                <th>Edité Roles</th>
                                <th>VOir Preatataire</th>
                            </tr>
                            </tfoot>
                        </table>
                        <div class="navigation" style="margin-left: 300px;margin-top: 20px;">



                            <div class="pagination">


                                {{ knp_pagination_render( prestataire ) }}



                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </section>
    </div>



{% endblock %}