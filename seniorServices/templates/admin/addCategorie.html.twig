{% extends 'baseAdmin.html.twig' %}
{% form_theme CategoryFormType 'bootstrap_4_layout.html.twig' %}
{% block body %}

    <div class="container-fluid mt-4">
        <div class="jumbotron">
            <h1 class="display-4" style="text-align: center;">Ajouter un service</h1>
        </div>
        {{ form_start(CategoryFormType ) }}

        <div class="row" style="max-width: 80vw;margin-left: 150px">
            <div class="col-md-4">
                {{ form_row(CategoryFormType.nomCat, {'attr': {'placeholder' :"Categorie"}}) }}
            </div>
            <div class="col-md-4">
                {{ CategoryFormType.sousCategory, {'attr': {'placeholder' :"Sous Categorie"}}) }}
            </div>
            <div class="col-md-4">
                {{ form_row( CategoryFormType.niveau ,{'attr': {'placeholder' :"Niveau"}})}}
            </div>

        </div>
        <div class="row" style="max-width: 80vw;margin-left: 150px">
            <div class="col-md-12">
                {{ form_row(CategoryFormType.description {'attr': {'placeholder' :"Descrption"}})  }}
            </div>
        </div>

        <div class="row" style="max-width: 80vw;margin-left: 150px">
            <div class="col-md-12">
                {{ form_row(ServiceFormType.categorys, {'attr': {'placeholder' :"Region"}}) }}
            </div>
        </div>

        <button  style=" width:190px;margin-left: 550px;margin-top: 50px;margin-bottom: 50px" class="btn btn-success" type="submit">
            valider
        </button>
        {{ form_end(CategoryFormType) }}

    </div>
{% endblock %}